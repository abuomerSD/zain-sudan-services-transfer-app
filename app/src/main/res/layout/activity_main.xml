<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtPhoneNumber"
        android:layout_width="302dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Enter The Phone Number"
        android:inputType="number|numberDecimal|phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="158dp"
        android:layout_height="137dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumber">

        <RadioButton
            android:id="@+id/rbtnEasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy" />

        <RadioButton
            android:id="@+id/ebtnShabab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shabab" />

        <RadioButton
            android:id="@+id/rbtnClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="197dp"
        android:layout_height="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

        <RadioButton
            android:id="@+id/rbtnWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Week" />

        <RadioButton
            android:id="@+id/rbtnMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Month" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        app:layout_constraintVertical_bias="0.154" />

    <TextView
        android:id="@+id/tvUssdCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSend" />

</androidx.constraintlayout.widget.ConstraintLayout>